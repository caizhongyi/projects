.code-example {
  position: relative;
  border: 1px solid #ddd;
  border-radius: 5px;
  padding: 40px 20px 20px 20px;
  margin-bottom: 20px;
  &:after {
    content: attr(title);
    padding: 5px 10px;
    text-align: center;
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    color: #999;
    font-size: 16px;
    font-style: italic;
  }
}

ol.linenums {
  margin-left: -10px;
  _overflow: hidden;
}