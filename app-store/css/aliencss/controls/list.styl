.list
    li
        padding 10px 15px;
        transition: all .2s ease-in-out 0s;
        &:hover
            background: #f7f5fd;
   li[class*=col-]
      padding 0;

.media
    small,.small
        margin-bottom: 5px;
    .bottom
        top: auto;
        bottom: 10px;
    .operate.hide
        visibility:hidden;
        display: block;
    &:hover > .operate
        visibility: inherit;
        opacity: 1;
        transform: scale(1);

    &-object
        float: left;
        margin-right: 10px;
        img
            width: 100%;

    &-body {
        overflow: hidden;
    }

    &-heading
        margin: 0 0 5px 0;
        font-size: 120%;
        small, .small
            margin-bottom: 0;


.thumbnail
    text-align: center;
    img
        width: 100%;
    .caption, .desc
        display: block;
        margin: 0;
        padding: 5px;
        text-align: left;

    &-info
        position: relative;
        .caption
            z-index: 1;
            margin: 0 5px;

    &-mask, &-info .caption
        display: block;
        overflow: hidden;
        color: #fff;
        position: absolute;
        bottom: 0;
        left: 0;
        line-height: 30px;
        _height: 30px;
        width: 100%;
        height: 0;
        transition: all 0.4s ease;

    &-mask
        background: #000;
        opacity: 0.5;

    &-info:hover
        .thumbnail-mask,
        .caption
            height: 30px
            padding: 0px;
