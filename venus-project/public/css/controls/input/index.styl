//text 无focus效果

text-noeffect() {
    border-color: none;
    box-shadow: none;
}

input-width = 200px;
input-padding = 3px;
input-nomral = input-padding + 5;
input-increase = 2px;
font-size ?= 12px;
font-normal ?= 12px + 2;
/* placeholder color */
input {
    &:-moz-placeholder {
        color: #999;
    }
    &:-ms-input-placeholder {
        color: #999;
    }
    &::-webkit-input-placeholder {
        color: #999;
    }
}

[type=text], [type=password], .input, .combo
    width: input-width;

select
    width: input-width + 14px

textarea, .textarea-animated
    vertical-align: top !important;
    height: 70px;
    transition height .2s ease-in-out

.textarea-animated
    height: 20px
    if ie-support
        *height:70px
        &:focus
            height: 70px;

/* input style */
select, textarea, [type=text], [type=password], .input, .combo
    vertical-align: middle;
    display: inline-block;
    line-height: normal;
    padding: input-nomral;
    background-color: #fff;
    border: 1px solid #ccc;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
    transition: all 0.2s ease-in-out 0s;
    color: #666;
    font-size: font-normal;
    &:focus, &:hover
        border-color: rgba(82, 168, 236, 0.8);
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset, 0 0 8px rgba(82, 168, 236, 0.6);
        outline: 0 none;

.input-group
    display: inline-block;
    vertical-align: middle;
    font-size: 0;
    [type=text], [type=password], .input
        border-radius: 0;
    [class*="btn"]:first-child, .first
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
    .add-on + input, input + .add-on
        border-bottom-left-radius: 0;
        border-top-left-radius: 0;
        margin-left: -1px;
    .add-on
        &:hover
            text-decoration none;
        padding: 5px 12px;
        text-align: center;
        display: inline-block;
        vertical-align: middle;
        border: 1px solid #ddd;
        font-size: font-size;
        font-family: "microsoft yahei";

.input-search
    @extend .input-group
    [type=text], .input
        width: 0;
        transition: all 0.2s ease;
        visibility: hidden;
    &:hover
        [type=text], .input
            width: 180px;
            visibility: inherit;

.input-igroup
    display: inline-block;
    position: relative;
    [type=text], [type=password], .input
        padding-left: 32px
    .btn
        position: absolute;
        left: 5px;
        top: 5px;
        font-style: normal;
        text-align: right;
    &-right
        [type=text],[type=password], .input
            padding-right: 32px
        .btn
            text-align: left;
            right: 0;
            left: auto;


.input-label {
    [type=text], [type=password], .input {
        padding-left: 70px
    }
    [class^=icon-], [class*=" icon-"], .icon {
        width: 70px;
        display: inline-block;
    }
}

types ?= {
    default:#fff,
    link: transparent,
    primary:#428BCA,
    info:#5BC0DE,
    muted:#999,
    success:#5CB85C,
    warning:#F0AD4E,
    danger:#D9534F,
    light:#c4caa5
}

for item in types
    .input-{item}
        input-color = types[item];
        &:hover, &:focus, &
            if input-color != transparent
                border-color: input-color + 30%;
                // color: input-color
                box-shadow: 0 1px 1px input-color + 50% inset, 0 0 8px input-color + 50%

.readonly, [readonly], .disabled, [disabled]
    &:focus, &:hover, &
        background: #f5f5f5 !important;
        box-shadow: none !important;
        border-color: #ccc !important;
    border-color: #ddd !important;

-font-size = font-size;
sizes ?= xs sm md lg xlg xxlg xxxlg

.select-disabled{ position: absolute; left:0 ; top: 0; width: 100%; height: 100%; background:#fff; z-index: 11; opacity: 0; filter: alpha( opacity = 0 ); }

/* text size */
for i in sizes
    .input-{i}
        font-size -font-size
        padding: input-padding
    -font-size += 1
    input-padding = input-padding + 2.2

-input-width-xs = input-width / 3;
-multiple = 0;

for i in 1...8
    -multiple += 1;
    .input-{i}x
        width: -input-width-xs * -multiple

.input-block
    if !ie-support
        width 100%;
    else
        padding-left: input-padding;
        padding-right: input-padding;
        .input
            width 100%;
            margin: 0(- input-padding);

