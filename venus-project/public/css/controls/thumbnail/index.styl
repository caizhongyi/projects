.thumbnail
    text-align: center;
    img
        width: 100%;
    .caption, .desc
        display: block;
        margin: 0;
        padding: 5px;
        text-align: left;

    &-info
        position: relative;
        .caption
            z-index: 1;
            margin: 0 5px;

    &-mask, &-info .caption
        display: block;
        overflow: hidden;
        color: #fff;
        position: absolute;
        bottom: 0;
        left: 0;
        line-height: 30px;
        _height: 30px;
        width: 100%;
        height: 0;
        transition: all 0.4s ease;

    &-mask
        a
            color #fff;
        background: #000;
        opacity: 0.5;

    &-info:hover
        .thumbnail-mask,
        .caption
            height: 30px
            padding: 0px;

    .thumbnail-mask.in,
    .caption.in
        height: 30px
        padding: 0px;