{php $_W['breadcrumb'] = array(array('title'=>'微站功能 '),array('title'=>'文章管理'))}
{template 'common/header'}
<div class="page-header">
    <h1>
        <i class="icon-book"></i>
        {if $action == 'news' && $do == 'all'}导入文章{/if}
    </h1>
</div>
<div class="main">
    <div class="search">
        <form action="site.php" method="get">
            <input type="hidden" name="act" value="news" />
            <input type="hidden" name="do" value="all" />
            <table class="table table-striped table-bordered table-hover">
                <tbody>
                <tr>
                    <th>规则名称</th>
                    <td>
                        <select class="span3" style="margin-right:15px;" name="rid">
                            <option value="0">请选择图文规则</option>
                            {loop $rules $row}
                            <option value="{$row['id']}" {if $row['id'] == $_GPC['rid']} selected="selected"{/if}>{$row['name']}</option>
                            {/loop}
                        </select>
                    <button class="btn btn-sm btn-primary"></i> 搜索</button>
                    </td>
                </tr>

                </tbody>
            </table>
        </form>
    </div>
    <form action="site.php" method="post">
        <input type="hidden" name="act" value="article" />
        <input type="hidden" name="do" value="allimport" />
        <div>
            <table class="table table-striped table-bordered table-hover">
                <thead class="navbar-inner">
                <tr>
                    <th style="width:30px;"></th>
                    <th>标题</th>
                    <th style="width:100px; text-align:left;">是否已导入</th>
                    <th style="width:150px; text-align:left;">操作</th>
                </tr>
                </thead>
                <tbody>
                {loop $news $item}
                <tr>
                    <td><input type="checkbox" name="status[{$item['id']}]" value="{$item['id']}"/></td>
                    <td><a href="{php echo create_url('site/article/import', array('newsid' => $item['id']))}">{$item['title']}</a></td>
                    <td>{if in_array(array('nid'=>$item['id']),$nids)}是{else}否{/if}</td>
                    <td style="text-align:left;"><span><a href="{php echo create_url('site/article/import', array('newsid' => $item['id']))}" title="导入"><i class="icon-edit"></i>导入</a></span></td>
                </tr>
                {/loop}
                <tr>
                    <td colspan="8">
                        <input name="submit" type="submit" class="btn btn-sm btn-primary" value="批量导入">
                        <input type="hidden" name="token" value="{$_W['token']}" />
                    </td>
                </tr>
                </tbody>

            </table>
        </div>
    </form>
</div>
{template 'common/footer'}