<script type="text/javascript" src="js/Date.min.js"></script>
<script type="text/javascript">
    $('#VoteContainer').on('click','.radio',function(){
        $(this).addClass('radioChecked').parent().siblings().find('.radio').removeClass('radioChecked')
    })

    $.coundown = {
        timer : null,
        start : function(){
            var now = new Date().getTime() + 120000;
            var self =  this;
            this.timer = setInterval(function(){
                var date = new Date(now), sec =  new Date().diffSec(date);
                $('#countdownSpan').html(sec);
                if(sec <= 0 ) self.stop();
            }, 1000 )
        },
        stop : function(){
            clearInterval(this.timer);
        }
    }
    $.coundown.start();


</script>
