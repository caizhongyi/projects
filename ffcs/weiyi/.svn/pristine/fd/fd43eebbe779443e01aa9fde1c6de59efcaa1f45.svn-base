html,body { background: #d8e1e6; font-family: "microsoft yahei"; line-height: 1.2; }
h1,h2,h3,h4,h5,h6 { font-weight: normal; }

.container{ width: 1000px; }
.text-warning { color: #f26008; }

.header {
    background: #2770ba;
    margin-bottom: 20px;
    padding: 20px 0;
    .logo { font-size: 40px; color: #fff;  }
    .logo-wall { font-size: 30px; color: #fff; text-shadow: 1px 1px 2px #000; width: 276px; float: left ; }
    .logo-wall span { display: inline-block; width: 170px; line-height: 1.2;  vertical-align: top; }
    img{ vertical-align: text-bottom ; margin-right: 10px;}
    .tipbox {float: left;}
    .account, .to { color: #ffcd25; }
    .account { font-size: 40px; }
    .to { font-size: 36px; }
}

.article {
    h3{ margin: 0;}
}

.result {
    font-size: 26px;
    margin-top: 30px;
    ol{  margin-top: 20px; }
    .title { margin-bottom: 20px; }
    .progress { float: left ; width: 80% ; margin-right: 20px; margin-top: 5px;}
    .total { overflow: hidden ; }
    .text-warning{ margin-left: 10px; }
    img { width: 90px; height: 60px; }
    h2 {}
}

.progressbar {
    .progress{ background: #a8acae; height: 15px; }
    .bar { background: #2770ba; }
}

.result-wall {
    font-size: 44px;
    .result-side { float: left; width: 125px; margin-right: 20px; }
    .result-main { overflow: hidden ;}
    img{ background: #f3f3f3; padding: 3px;  }
    li,.item { border: 3px solid #7c9fe1; padding: 10px; margin-bottom: 20px; background: #e4eef3;}
    p{ line-height: 1.3}
}

.tipbox {
    font-size: 30px;
    color: #fff;
    border: 1px solid #a5c4e2;
    border-radius: 5px;
    padding: 15px;
    position: relative;
    .arrow { position: absolute; width: 19px; height: 20px; left: -18px; top: 30%; background: url(../image/tipbox-arrow.png) no-repeat; }
}