body,html { margin: 0 ; padding: 0; font: 12px/1.5 '宋体'; }
img{  max-width: 100%; }
.banner{ width: 100%; }

.clearfix { *zoom: 1;}
.clearfix :before,
.clearfix :after { display: table; content: "";line-height: 0;}
.clearfix :after {  clear: both; }

.pull-left{ float: left ;}
.pull-right{ float: right ;}
.main{ overflow: hidden; }

.text-danger{ color: red ;}
.text-success{ color: green ;}


[class*=icon-]{ display: inline-block; vertical-align: middle; font-style: normal;}
.icon-personal{ background: url(../img/icon-personal.png) no-repeat; width: 22px; height: 17px;}
.icon-time,.icon-object,.icon-file{
    background: url(../img/icons.png); width: 19px; height: 19px;
}
.icon-object{ background-position: 0 -20px; }
.icon-file{ background-position: 0 -42px; }
.icon-char{color: #fff; font-family: "microsoft yahei"; font-size: 18px; }

.center{  text-align: center; }
.text-right{ text-align: right; }
[type=text],[type=password]{ border: 1px solid #454545; padding: 5px; vertical-align: middle;width:70%;}

.container{ padding: 20px; }

.alert{ border: 1px solid #454545;color: #000000; padding: 10px; background: #dee6e4; margin-bottom: 20px; }

[class*=btn-],.btn{ display: inline-block ; border: none;  padding: 5px 10px ; cursor: pointer ;  vertical-align: middle;}
.btn-post { background: #09ab84; border-radius: 10px; border: 1px solid #057c5f; box-shadow: 3px 3px  5px #666; font-size: 14px; color: #fff; padding: 5px 30px;}
.btn-post[disabled],.disabled{ background: #999; border: 1px solid #999; cursor: default}
.btn-default {}
.btn-add{ background: #a6b0ae; border: 1px solid #b9c1c0; border-bottom-color: #8b9694; border-right-color:#8b9694; padding: 3px 10px ;}
.btn-add .icon-personal{ background-position:  -23px 0 ;}
[class*=btn-] .icon-char{  margin: -10px 5px -5px -5px; }

.form{ margin-bottom: 20px;}

.summary{ margin: 20px 0; overflow: hidden;}
.summary  label { margin-bottom: 5px; display: block;}
.summary [class*=icon]{ margin-right: 5px;}
.summary .pull-left{ margin-right: 10px; width: 100px;}
.summary span{ display: inline-block;}

.footer{ background: url(../img/line.png) repeat-x; height: 9px; margin-bottom: 40px;}

.message-tip{ margin: 10px 0; text-align: center;}

.form-group{ margin-bottom: 10px;}

.text-success{ color: green;}
.text-error{ color: red;}
