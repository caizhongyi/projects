body,html{ background:#fff4c8; font-family: "microsoft yahei"; color: #636363;}
body{ position: relative; }

.text-warning{ color: #f17014;}

.light{ position: absolute; bottom: 20%; right: 5%;  background:url(../img/light.png) no-repeat; width: 70px; height: 201px; z-index: 1;}

.header img,
.footer img{ width: 100%;}
.header , .container ,.notice{ position: relative;z-index: 1;}

.return{ margin-bottom: -100px;}

.btn-menu,.btn-menu:hover,
.btn-danger,.btn-danger:hover,
.btn-org,.btn-org:hover{ background:#f76b08; width: 80%; height: 60px; line-height: 45px; color: #fff; font-size: 20px; border-radius: 7px; border: 1px solid #f76b08; box-shadow: 1px 1px 1px #999; border-bottom-color: #e66000; border-bottom-width: 6px;}
.btn-menu .icon-caret{ background:url(../img/caret.png) no-repeat; width: 17px; height: 20px; margin-left: 20px;}
.btn-danger,.btn-danger:hover,
.btn-org,.btn-org:hover{ border-radius: 4px; background: #fd332e; width: auto; height: auto; font-size: 12px; line-height: normal; border-bottom-color: #e8191c; padding: 5px 20px;}
.btn-org{ background: #ff8f2d; border-bottom-color: #f17014; }

.menu { margin: 20px 0;}
.menu li{ margin-bottom: 20px; text-align: center;}

.container{ padding: 20px 40px;}

.module-wy{ background: #fff;  margin-bottom: 20px; font-family: '宋体'; font-size: 12px; border-image: url(../img/module-border.png) 1 1 round;}
.module-wy .icon-title{ font-style: normal; background: url(../img/icon-title.png) no-repeat; width: 136px; height: 32px; text-align: center; line-height: 20px; color: #fff; font-size: 12px; margin-left: -15px;}
.module-wy .module-header{ padding:10px  0 0 0;}
.module-wy .module-body{ padding: 0 20px 20px 20px; }
.module-wy ol{ margin-left: -20px;}
.module-wy ul{ margin-left: -25px;}
.module-wy .text-warning{ color:#ff5a00;}
.module-wy h6{  font-weight: normal; margin: 20px 0 5px 0;}
.module-wy ul li{ list-style-type: square; list-style-image: url(../img/dotted.png); }
.module-wy .list-blessing{ margin: 0;}

.notice{ margin-bottom: 20px;}
ol,ul{ margin: 0;}

.list-blessing li{ border-bottom: 1px dashed #ddd; padding: 20px; list-style: none !important;}
.list-blessing .pull-right{ margin-left: 10px; }
.list-blessing p{ overflow: hidden;}

.pagination a{ border: none; color: #9e9e9e;}
