.img-preview ,.i-img{width: 333px; height: 200px; position: relative;}
.img-preview .mc ,.img-preview .mc-name,.img-preview .mc-number{position: absolute; }
.img-preview .mc{ left: 10px; top: 10px;max-width: 200px; max-height: 150px;}
.img-preview .mc-name{ top: 10px; right: 10px;}
.img-preview .mc-number{ bottom: 10px; right: 10px;text-align: center}
.img-preview .mc-number em{ display: block; }