<form action="" method="post">
<input type="hidden" name="id" value="{$goodsid}" />
<div class="mobile-img">
	{if !empty($goods['thumb'])}<img src="{$_W['attachurl']}{$goods['thumb']}" />{/if}
</div>

    <div class="container">
        <h1>{$goods['title']}</h1>
        <div class="form ">
            <div class="form-group">
                <span class="form-label">售价:</span>￥<span class="price">{$goods['marketprice']}</span>
            </div>
           <!-- <div class="form-group">
                <span class="form-label">原价:</span><span class="overline">￥12122</span></span>
            </div>-->
            {if $goods['total'] != -1}
            <div class="form-group">
                <span class="form-label">库存:</span><strong>{$goods['total']}</strong>件</span>
            </div>
            {/if}
            <div class="form-group">
                <span class="form-label">简介:</span>{$goods['description']}</span>
            </div>
            <div class="form-group">
                <span class="form-label">购买数量:</span>{$goods['content']}</span>
            </div>
            <div class="form-group">
                <span class="form-label">购买数量:</span>
                <span class="input-group input-spinner input-spinner-vertical">
                    <input type="text" name="count"  data-max="10" data-min="0"  value="1"/><span class="input-group-btn"><a class="add-on spinner-up"  href="javascript:;">+</a><a class="add-on spinner-down" href="javascript:;">-</a></span>
                </span>
                <!--<strong>12131</strong>件-->
                <script type="text/javascript">
                    $(function(){
                        $('.input-spinner').spinner();
                    })
                </script>
            </div>
            <div class="form-group">
                <input type="hidden" name="token" value="{$_W['token']}" />
                <button class="btn btn-buy" type="submit" name="submit">立即购买</button>
              <!--  <button class="btn btn-addcard">加入购物车</button>-->
            </div>
        </div>
    </div>

    <div class="mobile-div img-rounded">
        <div class="mobile-hd">商品详细描述</div>
        <div class="mobile-content">
            {$goods['content']}
        </div>
    </div>

