<table class="table table-striped table-bordered table-hover" id="home" {if $position == 2} style="display:none;"{/if}>
	<thead >
		<tr>
			<th colspan="3">首页扩展菜单</th>
		</tr>
	</thead>
	<tbody>
		{loop $result['home'] $item}
		<tr>
			<td style="width:80px;"><a href="javascript:;" onclick="addModuleMenu('{$item['title']}', '{$item['url']}')">添加</a></td>
			<td style="width:100px;">{$item['title']}</td>
		</tr>
		{/loop}
	</tbody>
</table>
<table class="table table-striped table-bordered table-hover" id="profile" {if $position == 1} style="display:none;"{/if}>
	<thead >
		<tr>
			<th colspan="3">个人中心扩展菜单</th>
		</tr>
	</thead>
	<tbody>
		{loop $result['profile'] $item}
		<tr>
			<td style="width:80px;"><a href="javascript:;" onclick="addModuleMenu('{$item['title']}', '{$item['url']}')">添加</a></td>
			<td style="width:100px;">{$item['title']}</td>
		</tr>
		{/loop}
	</tbody>
</table>
<script type="text/javascript">
