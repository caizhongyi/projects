{template 'common/header'}
<div class="page-header">
    <h1>
        <i class="icon-pencil"></i> 分类管理 <small><i class="icon-double-angle-right"></i>  </small>
    </h1>
</div>
<input type="hidden" name="id" value="{$rid}" />
{if $foo == 'display'}
<div class="main">
    <form action="" method="post">

        <p>
            <a href="{php echo create_url('site/module', array('do' => 'category', 'name'=>'exam', 'foo'=>'post', 'id'=>$rid));}" class="btn btn-sm btn-primary"><i class="icon-pencil"></i> 添加分类</a>
        </p>
        <div>
            <input type="hidden" name="act" value="module" />
            <input type="hidden" name="do" value="result" />
            <input type="hidden" name="name" value="exam" />
        </div>

        <div class="rule">
            <table class="table table-striped table-bordered table-hover">
                <thead class="navbar-inner">
                <tr>
                    <th>分类名称</th>
                    <th>分类描述</th>
                    <th style="width: 20%">操作</th>
                </tr>
                </thead>
                <tbody>
                {loop $list $item}
                <tr>
                    <td>
                        <a href="{php echo create_url('site/module', array('do'=>'option', 'name'=>'exam', 'foo'=>'post', 'op_id'=>$item['id'], 'type'=>$type))}" style="color:#333;">{$item['category']}</a>
                    </td>
                    <td>
                        <span class="text-error">{$item['describe']}</span>
                    </td>
                    <td>
                        <a href="{php echo create_url('site/module', array('do'=>'category', 'name'=>'exam', 'foo'=>'post', 'op_id'=>$item['id'], 'id'=>$rid))}" title="编辑" class="btn btn-xs btn-info"><i class="icon-edit"></i></a>
                        <a onclick="return confirm('此操作不可恢复，确认吗？'); return false;" href="{php echo create_url('site/module', array('do' => 'category', 'name'=>'exam', 'foo'=>'delete', 'op_id' => $item['id'], 'id'=>$rid))}" title="删除" class="btn btn-xs btn-danger"><i class="icon-remove"></i></a>
                </tr>
                {/loop}
                </tbody>

            </table>
            {$pager}
        </div>
    </form>
</div>
{elseif $foo=='post'}
<div class="main">
    <form action="" method="post" class="form-horizontal form" enctype="multipart/form-data">
<table class="tb">
    <tr>
        <th><label for="">分类名称</label></th>
        <td>
            <input type="text" name="category" class="span6" value="{$list['category']}" />
        </td>
    </tr>
    <tr>
        <th><label for="">分类描述</label></th>
        <td>
            <textarea name="describe" class="span6" cols="70">{$list['describe']}</textarea>
        </td>
    </tr>
</table>
    <table class="tb">
        <tr>
            <th></th>
            <td>
                <input name="sd_submit" type="submit" value="提交" class="btn btn-primary span3">
                <input type="hidden" name="token" value="{$_W['token']}" />
            </td>
        </tr>
    </table>
        </form>
</div>
{/if}
{template 'common/footer'}
  
	