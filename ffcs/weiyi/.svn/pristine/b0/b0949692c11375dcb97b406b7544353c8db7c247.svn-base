body {
    background: url(../images/bg.png);
}

* {
    padding: 0;
    margin: 0
}

.wrap {
    padding: 10px;
}

.turntable {
    position: relative;
    width: 509px;
    height: 509px;
    margin: 50px auto;
}

.turntable .turntable-btn,
.turntable .turntable-star {
    width: 150px;
    height: 203px;
    position: absolute;
    top: 130px;
    left: 180px;
    outline: none;
    cursor: pointer;
}
.turntable .turntable-star img{ width: 100%; height: 100%;}
.turntable .turntable-btn {
    background: none;
    border: none;
    z-index: 100;
}

.turntable .turntable-arrow {
}

.turntable .plate {
    width: 509px;
    height: 509px;
    position: absolute;
    top: 0;
    left: 0
}

.rvml {
    left: 0;
    top: 0;
}

.result {
    background: #fcf8f0;
    border: 1px solid #fcf8f0;
    border-radius: 10px;
    padding: 10px;
    font-size: 26px;
    color: #626262;
    font-family: "microsoft yahei"
}

.result .title {
    background: url(../images/title.png) no-repeat;
    width: 195px;
    height: 45px;
    color: #fff;
    font-size: 28px;
    text-align: center;
    line-height: 1.5;
}

.result .content {
    padding: 20px;
}

/* 横向放置的手机和竖向放置的平板之间的分辨率 */
@media (max-width: 767px) {
    .turntable , .turntable .plate{ width: 450px; height: 450px;}
    .turntable .turntable-btn,
    .turntable .turntable-star{ left: 150px; top: 100px;}
}

/* 横向放置的手机及分辨率更小的设备 */
@media (max-width: 480px) {
    .turntable , .turntable .plate{ width: 300px; height: 300px;}
    .turntable .turntable-btn,
    .turntable .turntable-star{ left: 85px; top: 60px; width: 120px; height: 160px;}
}