html,
body {
  background: #d8e1e6;
  font-family: "microsoft yahei";
  line-height: 1.2;
}
h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: normal;
}
.container {
  width: 1000px;
}
.text-warning {
  color: #f26008;
}
.header {
  background: #2770ba;
  margin-bottom: 20px;
  padding: 20px 0;
}
.header .logo {
  font-size: 40px;
  color: #fff;
}
.header .logo-wall {
  font-size: 30px;
  color: #fff;
  text-shadow: 1px 1px 2px #000;
  width: 276px;
  float: left ;
}
.header .logo-wall span {
  display: inline-block;
  width: 180px;
  line-height: 1.2;
  vertical-align: top;
}
.header img {
  vertical-align: text-bottom;
  margin-right: 10px;
}
.header .tipbox {
  float: left;
}
.header .account,
.header .to {
  color: #ffcd25;
}
.header .account {
  font-size: 40px;
}
.header .to {
  font-size: 36px;
}
.article h3 {
  margin: 0;
}
.result {
  font-size: 26px;
  margin-top: 30px;
}
.result ol {
  margin-top: 20px;
}
.result .title {
  margin-bottom: 20px;
}
.result .progress {
  float: left ;
  width: 80% ;
  margin-right: 20px;
  margin-top: 5px;
}
.result .total {
  overflow: hidden ;
}
.result .text-warning {
  margin-left: 10px;
}
.result img {
  width: 90px;
  height: 60px;
}
.progressbar .progress {
  background: #a8acae;
  height: 15px;
}
.progressbar .bar {
  background: #2770ba;
}
.result-wall {
  font-size: 44px;
}
.result-wall .result-side {
  float: left;
  width: 125px;
  margin-right: 20px;
}
.result-wall .result-main {
  overflow: hidden ;
}
.result-wall img {
  background: #f3f3f3;
  padding: 3px;
}
.result-wall li,
.result-wall .item {
  border: 3px solid #7c9fe1;
  padding: 10px;
  margin-bottom: 20px;
  background: #e4eef3;
}
.result-wall p {
  line-height: 1.3;
}
.tipbox {
  font-size: 30px;
  color: #fff;
  border: 1px solid #a5c4e2;
  border-radius: 5px;
  padding: 15px;
  line-height: 45px;
  position: relative;
}
.tipbox .arrow {
  position: absolute;
  width: 19px;
  height: 20px;
  left: -18px;
  top: 30%;
  background: url(../image/tipbox-arrow.png) no-repeat;
}
