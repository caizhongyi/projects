body,html{ background:#fff4c8; font-family: "microsoft yahei"}
body{ position: relative; }

.text-wraning{ color: #f17014;}

.light{ position: absolute; bottom: 100px; right: 40px;  background:url(../img/light.png) no-repeat; width: 125px; height: 201px; z-index: 1;}

.header img,
.footer img{ width: 100%;}

.btn-menu,.btn-menu:hover{ background:#f76b08; width: 287px; height: 60px; line-height: 45px; color: #fff; font-size: 20px; border-radius: 7px; border: 1px solid #f76b08; box-shadow: 1px 1px 1px #999; border-bottom-color: #e66000; border-bottom-width: 6px;}
.btn-menu .icon-caret{ background:url(../img/caret.png) no-repeat; width: 17px; height: 20px; margin-left: 20px;}

.menu { margin: 20px 0;}
.menu li{ margin-bottom: 20px; text-align: center;}

.container{ padding: 20px 40px;}
