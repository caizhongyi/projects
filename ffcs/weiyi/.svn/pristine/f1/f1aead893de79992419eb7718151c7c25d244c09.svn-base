{php $_W['breadcrumb'] = array(array('title'=>'营业厅商城'),array('title'=>'商品类型'))}
{template 'common/header'}
{if $operation == 'post'}
<div class="page-header">
    <h1>
        <i class="icon-book"></i> 商品类型设置
    </h1>
</div>
<div class="main">
	<form action="" method="post" class="form-horizontal form" enctype="multipart/form-data">
	<input type="hidden" name="parentid" value="{$parent['id']}" />
		<table class="tb">
			<tr>
				<th><label for="">分类名称</label></th>
				<td>
					<input type="text" name="type_name" class="span6" value="{$goods_type['type_name']}" />
				</td>
			</tr>
			<tr>
				<th><label for="">分类描述</label></th>
				<td>
					<textarea name="description" class="span6" cols="70">{$goods_type['description']}</textarea>
				</td>
			</tr>
			<tr>
				<th></th>
				<td>
					<input name="submit" type="submit" value="提交" class="btn btn-sm btn-primary">
					<input type="hidden" name="token" value="{$_W['token']}" />
				</td>
			</tr>
		</table>
	</form>
</div>
<script type="text/javascript" src="./resource/script/colorpicker/spectrum.js"></script>
<link type="text/css" rel="stylesheet" href="./resource/script/colorpicker/spectrum.css" />
<script type="text/javascript">
<!--
	$(function(){
		colorpicker();
	});
//-->
</script>
{elseif $operation == 'display'}

<div class="page-header">
    <h1>
        <i class="icon-book"></i> 商品类型设置
    </h1>
</div>
<div class="main">
<p>
        <a href="{php echo $this->createWebUrl('goods_type', array('name' => 'businesshall', 'op' => 'post'))}" class="btn btn-sm btn-primary"><i class="icon-pencil"></i>添加分类</a>
	</p>
	<div class="category">
		<form action="" method="post" onsubmit="return formcheck(this)">
		<table class="table table-striped table-bordered table-hover">
			<thead>
				<tr>
					<th>类型名称</th>
					<th style="width:180px;">操作</th>
				</tr>
			</thead>
			<tbody>
				{loop $goods_type $row}
				<tr>
					<td><div>{$row['type_name']}&nbsp;&nbsp;</div></td>
					<td><a href="{php echo $this->createWebUrl('attrlist', array('op' => 'display', 'id' => $row['type_id']))}">属性列表</a>&nbsp;&nbsp;<a href="{php echo $this->createWebUrl('goods_type', array('op' => 'post', 'id' => $row['type_id']))}">编辑</a>&nbsp;&nbsp;<a href="{php echo $this->createWebUrl('goods_type', array('op' => 'delete', 'id' => $row['type_id']))}" onclick="return confirm('确认删除此分类吗？');return false;">删除</a></td>
				</tr>
				{/loop}
			</tbody>
		</table>
		</form>
	</div>
</div>
{/if}
{template 'common/footer'}