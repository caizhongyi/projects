body,html{ background:#fff4c8; font-family: "microsoft yahei"; color: #636363;}
body{ position: relative; }
p{font-size: 14px;}

.text-warning{ color: #f17014;}

.light{ position: absolute; bottom: 20%; right: 5%;  background:url(../bainian_img/light.png) no-repeat; width: 70px; height: 201px; z-index: 1;}
.header img,
.footer img{ width: 100%;}
 .container ,.notice{ position: relative;z-index: 1;}
.header { position: relative;z-index: 1;margin-bottom: 0px;}

.return{ margin-bottom: -50%;}

.btn-menu,.btn-menu:hover,
.btn-danger,.btn-danger:hover,
.btn-org,.btn-org:hover{ background:#f76b08; width: 80%; height: 60px; line-height: 45px; color: #fff; font-size: 20px; border-radius: 7px; border: 1px solid #f76b08; box-shadow: 1px 1px 1px #999; border-bottom-color: #e66000; border-bottom-width: 6px;}
.btn-menu .icon-caret{ background:url(../bainian_img/caret.png) no-repeat; width: 17px; height: 20px; margin-left: 20px;}
.btn-danger,.btn-danger:hover,
.btn-org,.btn-org:hover{ border-radius: 4px; background: #fd332e; width: auto; height: auto; font-size: 12px; line-height: normal; border-bottom-color: #e8191c; padding: 5px 20px;}
.btn-org{ background: #ff8f2d; border-bottom-color: #f17014; }

.menu { margin: 20px 0;}
.menu li{ margin-bottom: 20px; text-align: center;}

.container{ padding: 0px 30px;}

.module-wy{ background: #fff;  margin-bottom: 20px; font-family: '宋体';border-image: url(../bainian_img/module-border.png) 1 1 round;}
.module-wy .icon-title{ font-style: normal; background: url(../bainian_img/icon-title.png) no-repeat; width: 136px; height: 32px; text-align: center; line-height: 20px; color: #fff; font-size: 14px; margin-left: -15px;}
.module-wy .module-header{ padding:10px  0 0 0;}
.module-wy .module-body{ padding: 0 20px 20px 20px; }
.module-wy ol{ margin-left: -20px;}
.module-wy ul{ margin-left: -25px;}
.module-wy .text-warning{ color:#ff5a00;}
.module-wy h6{  font-weight: normal; margin: 20px 0 5px 0;font-size: 14px;}
.module-wy ul li{ list-style-type: square; list-style-image: url(../bainian_img/dotted.png); }
.module-wy .list-blessing,
.module-wy .pagination{ margin:  0 ;}
.module-wy .pagination{ margin-top: 10px;}

.notice{ /*margin-bottom: 20px;*/}
ol,ul{ margin: 0;}

.list-blessing li{ border-bottom: 1px dashed #ddd; padding: 20px 0; list-style: none !important;}
.list-blessing .pull-right{ margin-left: 10px; }
.list-blessing p{ overflow: hidden;}

.pagination{  padding: 0;  }
.pagination a{ border: none; color: #9e9e9e; margin: 0}
.pagination .active a,
.pagination a:hover{  background: none; text-decoration: underline; color: #FF8F2D}

[type=text],[type=password]{font-size: 18px;}

.text-notice{color: red;}


