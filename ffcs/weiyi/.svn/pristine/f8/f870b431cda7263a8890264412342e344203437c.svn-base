

.wy-page{font-family: "microsoft yahei"; background:#333332; color: #fff; padding: 0; margin: 0; text-shadow: none;}
.wy-page-list {background:#dadada; padding: 25px 0 ; }
.wy-page-list .viewlist h3{ color: #666;}
.wy-page-content{}

a{ text-decoration: none; }

.header img{ width: 100%;}

.article {padding:10px;}
.article h1{ font-size: 25px;  margin: 5px 0;}
.article .summary{ font-size: 12px; margin-bottom: 20px;}
.article .date{ color:#999;}
.article p{ text-indent: 2em; font-size: 14px;}
.article img{ width: 100%;}

.viewlist{ text-align: center; margin: 0; padding: 0;}
.viewlist li{ zoom:1; display:inline-block; margin: 10px 20px; list-style: none; padding: 0;}
.viewlist li:after{ content:"";display:block;height:0;line-height:0;font-size:0;visibility:hidden;clear:both; }
.viewlist li .item-info{ overflow: hidden; }
.viewlist li .item-side{ float: left; }
.viewlist li .item-side,
.viewlist li .item-side img{ width: 140px; height: 144px;}
.viewlist h3{ font-family: "microsoft yahei"; margin-top: 0; font-size: 25px; color: #fff; text-align: center; font-weight: normal;}
.viewlist .des{ color: #999; font-size: 12px; font-weight: normal;}



.flexslider{ position: relative; border-radius: 0;}
.flex-control-nav{ bottom: 10px;}
.flex-control-paging li a{ border-radius: 0; width: 70px; background:#090d13;}
.flex-control-paging li a.flex-active{ background:#eb4d0e;}
.flex-direction-nav{ display: none;}


