{template 'header'}
{template 'slide'}
<body onload="setMenuStyles();">
<!--导航菜单-->
<div class="weimob-content">
    {if $navs}
    <div class="weimob-list" id="menu">
        {loop $navs $nav}
        <a href="{$nav['url']}">
            <div class="item-title"><div class="title-text">{$nav['name']}</div></div>
            <div class="item-image" style="background-image: url({$_W['attachurl']}{$nav['icon']})">
            </div>
        </a>
        {/loop}
    </div>
    {else}
    <a href="mobile.php?act=channel&name=home&weid={$_W['weid']}" class="box-item">
        <i class="icon-user"></i>
        <span style="{$nav['css']['name']}">个人中心</span>
    </a>
    {/if}
</div>
{template 'footer'}
