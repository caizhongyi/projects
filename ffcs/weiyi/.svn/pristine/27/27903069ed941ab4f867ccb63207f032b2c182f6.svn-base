{php $_W['breadcrumb'] = array(array('title'=>'微会员'),array('title'=>'优惠劵管理'),array('title'=>'发布优惠劵'))}
{template 'common/header'}
<link type="text/css" rel="stylesheet" href="./resource/ace/assets/css/daterangepicker.css" />
<script type="text/javascript" src="./resource/script/daterangepicker.js"></script>
<div class="page-header">
   <h1>
       <i class="icon-book"></i> 发布优惠劵 <small><i class="icon-double-angle-right"></i> 发布现金抵用券和打折优惠券信息</small>
   </h1>
</div>
<div id="main">
<div class="widget-box" >
    <form action="{php echo create_url('micromember/coupon', array('actType'=>'save'));}" method="post" class="form-horizontal form">
        <table id="form" class="tb reply-news-edit">
        	<input type="hidden" name="couponId" value="{$_GPC['couponId']}"/>
        	 <tr>
                <th>优惠劵名称</th>
                <td><input type="text" name="title" id="title" value="{$result['title']}" class="span7" data-rule-required="true" /></td>
            </tr>
            <tr>
            	<th>选择人群</th>
            	<td>
                     <label class="radio inline">
                         <input type="radio" name="crowd_type" value="0" checked="checked"/>所有会员
                     </label>
                    <script type="text/javascript">
                        $(function () {
                            $("input[name='crowd_type']").click(function () {
                                var $ckone = $("#ckone"), cktwo = $("#cktwo");
                                if ($(this).hasClass("dmoney")) {
                                    $ckone.show();
                                    cktwo.hide();
                                }
                                else if ($(this).hasClass("mmoney")) {
                                    $ckone.hide();
                                    cktwo.show();
                                } else {
                                    $ckone.hide();
                                    cktwo.hide();
                                }
                                ;
                            });
                        })
                    </script>
            	</td>
            </tr>
            <tr>
                <th>有效期</th>
                <td>
                <div class="pull-left">
                	<input name="start" type="hidden" value="{php echo date('Y-m-d', $starttime)}" />
					<input name="end" type="hidden" value="{php echo date('Y-m-d', $endtime)}" />
					<button class="form-control date" id="date-range"  type="button"><span class="date-title">{php echo date('Y-m-d', $starttime)} 至 {php echo date('Y-m-d', $endtime)}</span> <i class="icon-caret-down"></i></button>
				</div>
					<script type="text/javascript">
					$(function() {
						$('#date-range').daterangepicker({
							format: 'YYYY-MM-DD',
							startDate: $(':hidden[name=start]').val(),
							endDate: $(':hidden[name=end]').val(),
							locale: {
								applyLabel: '确定',
								cancelLabel: '取消',
								fromLabel: '从',
								toLabel: '至',
								weekLabel: '周',
								customRangeLabel: '日期范围',
								daysOfWeek: moment()._lang._weekdaysMin.slice(),
								monthNames: moment()._lang._monthsShort.slice(),
								firstDay: 0
							}
						}, function(start, end){
							$('#date-range .date-title').html(start.format('YYYY-MM-DD') + ' 至 ' + end.format('YYYY-MM-DD'));
							$(':hidden[name=start]').val(start.format('YYYY-MM-DD'));
							$(':hidden[name=end]').val(end.format('YYYY-MM-DD'));
						});
					});
					</script>
                </td>
            </tr>
            <tr>
                <th>类型</th>
                <td>
	                 <label class="radio inline">
	                     <input type="radio" name="type" value="1" {if empty($result['type']) || $result['type']==1}checked="checked"{/if}/>打折优惠券　
	                 </label>
	                 <label class="radio inline">
	                     <input type="radio" name="type" value="2" {if $result['type']==2}checked="checked"{/if}/>现金抵用券
	                 </label>
                </td>
            </tr>
            <tr>
                <th>数量</th>
                <td>
                 	每个用户可以获得：
                 	<input type="text" name="nums" id="nums" style="width:80px;height:25px;" value="{$result['get_num']}" class="input-sm" data-rule-required="true" value="1" data-rule-number="true"/> 张券     	
                </td>
            </tr>
            <tr>
                <th>使用说明</th>
                <td>
                 	<textarea class="input-large" name="info" id="info" data-rule-required="true" style="width:534px;">{$result['conpon_desc']}</textarea>
                    <span class="help-inline">在此说明券的使用方式，如最低消费金额，优惠券打折信息，不与其他优惠同时使用、节假日不可使用等。</span>
	                <script type="text/javascript">
		                kindeditor($('#info'));
		            </script>
                </td>
            </tr>
            <tr>
            	<th></th>
            	<td>
	            	<button id="bsubmit1" type="submit" class="btn btn-sm btn-primary">保存</button>
	                <button type="button" class="btn btn-sm" onclick="Javascript:window.history.go(-1)">取消</button>
            	</td>
            </tr>
        </table>
    </form>
</div>
   
</div>

{template 'common/footer'}
