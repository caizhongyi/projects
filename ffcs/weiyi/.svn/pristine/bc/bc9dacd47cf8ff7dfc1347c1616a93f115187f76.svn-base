{if empty($news)}
	{php $namesuffix = '-new[(wrapitemid)][]';}
	{php $itemid = '(itemid)';}
	{php $wrapitemid = '(wrapitemid)';}
{else}
	{php $namesuffix = '[news-wrap-item-'.$key.']['.$news['id'].']'}
	{php $itemid = 'news-item-' . $news['id'];}
	{php $wrapitemid = 'news-wrap-item-'.$key;}
{/if}
{if !empty($news)}
	<div class="item" id="news-item-{$news['id']}">
{/if}
<div id="show" class="alert alert-info reply-news-list {if !empty($key) && !empty($news['id']) && $key == $news['id']}reply-news-list-first{/if} {if empty($news)}hide{/if}">
	<div class="reply-news-list-cover"><img src="{$_W['attachurl']}{$news[thumb]}" alt=""></div>
	<div class="reply-news-list-detail">
		<div class="title">{$news['title']}</div>
		<div class="content">{$news['description']}</div>
		<span class="pull-right">{if !empty($news)}<a href="{php echo create_url('index/module/delete', array('name' => 'news', 'id' => $news[id]))}" onclick="return doDeleteItem('news-item-{$news['id']}', this.href)" style="margin-right:5px;">删除</a>{else}<a onclick="doDeleteItem('{$itemid}')" href="javascript:;" style="margin-right:5px;">删除</a>{/if}<a onclick="newsHandler.doEditItem('{$itemid}', '{$wrapitemid}')" href="javascript:;">编辑</a></span>
	</div>
</div>
<table id="form" class="tb reply-news-edit {if !empty($news)}hide{/if}">
	<tr>
		<th>素材{$_GPC['title']}</th>
		<td>
			<button class="btn btn-sm btn-primary" onclick="showNewsForm('{$itemid}')" type="button">选择素材</button>
			<span class="help-block">素材是由系统其它功能提供的一些数据，例如：文章、相册、商户等</span>
		</td>
	</tr>
	<tr>
		<th>标题</th>
		<td>
			<input type="text" id="title" class="span7" placeholder="" name="news-title{$namesuffix}" value="{$news['title']}">
		</td>
	</tr>
	<tr>
		<th>封面</th>
		<td>
			<!-- 此处增加class="reply-news-edit-cover-1"为编辑状态，反之则不显示封面图片，隐藏删除按钮 -->
			<div id="" class="uneditable-input reply-edit-cover">
				<div class="detail">
					<span class="pull-right">大图片建议尺寸：700像素 * 300像素</span>
                    <div  class="ace-file-input ">
                        <label data-title="Change" class="file-label selected"><span data-title="index.css" class="file-name"><i class="icon-file"></i></span></label>
                    </div>
                    <input type="button" id="news-picture" fieldname="news-picture{$namesuffix}" class="btn btn-sm btn-primary  reply-edit-cover-upload" value="<i class='icon-upload-alt'></i> 上传" style="" />
                    <button type="button" class="btn btn-upload-delete reply-news-edit-cover-remove" id="upload-delete" onclick="doDeleteItemImage(this, 'news-picture-value')" style="{if empty($news[thumb])} display:none;{/if}"><i class="icon-remove"></i> 删除</button>
                </div>
				{if !empty($news)}
				<input type="hidden" name="news-picture-old{$namesuffix}" value="{$news[thumb]}">
				<div id="upload-file-view" class="upload-view">
					<img width="100" src="{$_W['attachurl']}{$news[thumb]}">&nbsp;&nbsp;
				</div>
				{else}
				<div id="upload-file-view"></div>
				{/if}
			</div>
		</td>
	</tr>
	<tr>
		<th>描述</th>
		<td>
			<textarea style="height:80px;" class="span7" cols="70" id="description" name="news-description{$namesuffix}">{$news['description']}</textarea>
		</td>
	</tr>
	<tr>
		<th>内容</th>
		<td>
			<textarea style="height:200px; width:538px;" class="span7 richtext-clone" name="news-content{$namesuffix}" cols="70" id="reply-add-text">{$news['content']}</textarea>
		</td>
	</tr>
	<tr>
		<th>来源</th>
		<td>
			<input type="text" id="url" class="span7" placeholder="" id="url" name="news-url{$namesuffix}" value="{$news['url']}">
			{php include_once model('site');}
			{php $systemmenus = site_system_menus();}
			<span class="help-block">设置来源后打开该条图文将跳转到指定链接（注：外部链接需加http://）</span>
			<div class="alert-block" style="padding:3px 0;"><strong class="text-error">使用微站链接:</strong>
				{loop $systemmenus $menu}
				<a href="javascript:;" class="icon-external-link" onclick="$(this).parent().parent().find('#url').val('{$menu['url']}');">{$menu['title']}</a>&nbsp;
				{/loop}
			</div>
		</div>
		</td>
	</tr>
	 <tr>
        <th>直接跳转来源</th>
        <td>
            {if !empty($news['islocation'])}
            <span><label for="location"><input type="radio" value="0" name="news-islocation{$namesuffix}"  />是<input name="news-islocation{$namesuffix}" type="radio"  value="1"  checked="checked" />否</label></span>
            {else}
            <span><label for="location"><input type="radio" value="0" name="news-islocation{$namesuffix}"  checked="checked" />是<input name="news-islocation{$namesuffix}" type="radio"  value="1" />否</label></span>
            {/if}
        </td>
    </tr>
</table>
{if !empty($news)}
	</div>
{/if}
