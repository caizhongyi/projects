		<input type="hidden" name="profilevalue" value="{$_GPC['profilevalue']}"/>
		<input type="hidden" name="award" value="{$_GPC['award']}" />
		<input type="hidden" name="awardvalue" value="{$_GPC['awardvalue']}"/>
