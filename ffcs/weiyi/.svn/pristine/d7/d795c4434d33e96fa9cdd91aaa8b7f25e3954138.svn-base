							<input name="end" type="hidden" value="{php echo date('Y-m-d', $endtime)}" />
							<button id="date-range" class="form-control date" type="button" style="width:300px;"><span class="date-title">{php echo date('Y-m-d', $starttime)} 至 {php echo date('Y-m-d', $endtime)}</span> <i class="icon-caret-down"></i></button>
