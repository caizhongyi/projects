.dialog{
  position fixed
  left:0
  top:0
  display none
  z-index 100
  background #000000
  opacity 0.5
}
.dialog.in{
  display table
}

.dialog-content{
  display table-cell
  text-align center
  vertical-align middle
}

.dialog,
.dialog-content{
  width 100%
  height:100%
}

.dialog-modal{
  background #fff;
  width 80%
  max-width 300px
  border 1px solid #ddd;
  margin 0 auto;
}