@charset "utf-8";
.list-media-seasonal .media-body{ position: relative;}
.list-media-seasonal li .media-object{ width: 50px; line-height: 1.6; text-align: center;}
.list-media-seasonal .media-heading,.list-media-seasonal small{ font-weight: bold;}
.list-media-seasonal .media-object em{ font-size: 120%; font-weight: bold; color: #1992B1 }
/*.list-media-seasonal .detail { height: auto; display: none;}
.list-media-seasonal li:hover .detail{  display: block;}*/
.list-media-seasonal .opts-static{ margin-top: 2px; }
.list-media-seasonal .summary{ margin-bottom: 5px; }


.activity-layout .form { font-size: 12px}
.activity-layout .form .combo { margin-right: 10px}
.activity-layout .form .wide-combo {width: 200px}
.activity-layout .form .wide-text {width: 250px}
[class*=activity-layout] .layout-side, .puture-layout .layout-side{ position: relative;    z-index: 1}
[class*=activity-layout] .side-inner h3, .puture-layout .side-inner h3{margin-bottom: 10px;font-weight: normal}


.right-activity-layout .layout-main {
    overflow: visible;
    float: left;
    width: 700px
}

.right-activity-layout .auto-main {
    width: auto;
    float: none
}

.right-activity-layout .side-infos p {
    margin: 0 0 5px 0
}

.right-activity-layout .layout-side {
    margin-left: 10px;
    margin-right: 0;
    float: right;
    width: 250px
}

.right-activity-layout .layout-side .yel-gradient-btn {
    padding: 10px 0;
    display: block
}

.right-activity-layout .layout-side .form {
    margin-top: 20px;
    padding: 10px 0;
    border-top: 1px dashed #ddd
}

.right-activity-layout .layout-side .form .input-icon .input {
    width: 190px
}

.right-activity-layout .layout-side .form .btns { text-align: right }
.right-activity-layout .layout-side .form .btns [class*=btn] + [class*=btn]{ margin: 0;}
.right-activity-layout .btn-default .icon { margin: -10px 5px -10px -5px}
.right-activity-layout .form .title {font-weight: bold; margin: 10px 0}
.right-activity-layout .layout-side .mod,
.right-activity-layout .layout-side .mod .hd { border: 0}
.right-activity-layout .layout-side .mod .hd em {color: #0064a8; font-weight: normal}

.puture-layout .layout-side {
    width: 272px
}

.puture-layout .layout-side .input-search {
    margin: 10px 0;
    width: auto;
    display: block
}

.puture-layout .layout-side .btn-group {
    margin-bottom: 10px
}

.puture-layout .layout-side .search-group {
    margin: 10px 0
}

.puture-layout .layout-side .search-group .input-search {
    margin: 0;
    width: 190px;
    display: inline-block
}

.puture-layout .scroll .group-list, .puture-layout .scroll-y .group-list { height: 100px;}

.discussion { font-size: 12px}
.discussion.accordion{ margin-top: 20px;}
.discussion.accordion .accordion-heading{  background: #f7f7f7 }
.discussion.accordion .accordion-panel{ height: 300px; overflow-y:auto;}
.discussion.accordion .accordion-heading .group{ display: none;}
.discussion .discussion-side {
    position: relative;
    float: left;
    width: 215px;
    margin-right: 10px;
    background: #f7f7f7
}

.discussion .discussion-side li {
    border-bottom: 1px dotted #ddd;
    padding: 10px;
    position: relative
}

.discussion .discussion-side .opts {
    position: absolute;
    right: 10px;
    top: 10px;
    display: none
}

.discussion .discussion-side li:hover .opts {
    display: block
}

.discussion .discussion-main {
    overflow: hidden
}

.finish-info {
    line-height: 22px;
    margin-bottom: 20px;
    color:#999;
}

.finish-info label {
    display: inline-block;
    width: 80px;
    vertical-align: top;
    color: #666;
}

.finish-info p {
    display: inline-block;
    *display: inline;
    *zoom: 1;
    text-indent: 0;
    overflow: hidden;
    width: 450px
}

.finish-side {
    float: left;
    width: 400px
}

.finish-main {
    font-size: 12px;
    padding-bottom: 20px;
    overflow: hidden;
    *zoom: 1
}

.finish-main h1 {
    font-family: "microsoft yahei";
    font-size: 22px;
    margin-bottom: 20px;
}

.finish-side, .finish-main {
    margin-top: 20px
}

.finish-des {
    margin: 10px 0
}

.vote .radio input {
    margin-right: 5px;
    vertical-align: middle
}

.vote .radio label {
    vertical-align: middle
}

.vote .result {
    margin-left: 20px
}

.factorylist{ padding: 20px 0; overflow: hidden;}
.factorylist span {display: inline-block;position: relative ;}
.factorylist li {
    width: 100px;
    margin: 10px;
    float: left;
    position: relative;
    text-align: center
}

.factorylist li:hover .item-del { visibility: inherit; opacity: 1; transition:all .2s ease-in-out;}
.factorylist li img { border: 1px solid #ddd;width: 60px; height: 60px}
.factorylist li .item-del {visibility: hidden; opacity: 0; position: absolute; top: 1px;right: 1px; margin-right: 0;}

.factorylist li .item-arrow {
    background: url(../images/icons/arrow.png) no-repeat center;
    width: 22px;
    height: 60px;
    margin-right: 10px;
    display: inline-block
}

.factorylist li .empty { background: 0}
.factorylist li .item-info { vertical-align: top;width: 62px; font-size: 12px}
.factorylist li .item-info em {
    font-weight: bold;
    display: block;
    margin-top: 5px
}

.guide {
    display: none;
    font-size: 12px;
    top: 110px;
    right: 160px;
    position: fixed;
    width: 200px;
    background: #1992b1
}

.guide li {  position: relative; padding: 5px 10px; border-bottom: 1px dashed #47a8c1}

.guide li a { color: #75bed0}
.guide li .icon-20x20 {position: absolute; right: 4px; top: 5px;background-position: -340px -20px}
.guide .error a { color: red}
.guide .error .icon-20x20 { background-position: -320px -20px}
.guide .success .icon-20x20 { background-position: -300px -20px}
.guide .success a { color: #fff}

.side-infos { padding: 10px 0;margin: 10px -10px; border-bottom: 1px solid #d8ecf7}
.side-infos-line {border-bottom: 0}
.side-infos-line dt, .side-infos-line dd {border-bottom: 1px solid #d8ecf7}

.hot-activity, .main-hot-activity {
    border: 1px solid #ddd;
    margin-bottom: 10px;
    padding: 10px;
    background: #f7f7f7;
    position: relative;
    *zoom: 1
}
.hot-activity:before, .main-hot-activity:before, .hot-activity:after, .main-hot-activity:after {
    display: table;
    content: "";
    line-height: 0
}
.hot-activity:after, .main-hot-activity:after { clear: both}
.hot-activity .img, .main-hot-activity .img {
    width: 114px;
    height: 100px;
    float: left;
    margin-right: 20px;
    border: 1px solid #ddd
}
.hot-activity .title, .main-hot-activity .title { margin-bottom: 10px}
.hot-activity p, .main-hot-activity p {overflow: hidden; font-size: 12px;text-indent: 0}
.hot-activity p em, .main-hot-activity p em {color: #1992b1;font-family: tahoma}
.hot-activity .opts, .main-hot-activity .opts { position: absolute;right: 10px;top: 10px}
.main-hot-activity .opts {bottom: 10px;top: auto}
.main-hot-activity .img { width: 180px; height: 150px}
.ride .opts {top: 15px}
.puture-layout .form-item.group a { margin-right: 10px;margin-left: 0}

.playgameinfo { *zoom: 1 ; font-size: 14px;}
.playgameinfo:before, .playgameinfo:after {
    display: table;
    content: "";
    line-height: 0
}
.playgameinfo:after {clear: both}
.playgameinfo small{ font-weight: normal;}
.playgameinfo .playgameinfo-logo,
.playgameinfo .playgameinfo-time {
   /* display: inline-block;
    *zoom:1;
    *margin-right: 10px;
    *display: inline;*/
    float: left;
    vertical-align: top;
    margin-right: 10px;
}
.playgameinfo .playgameinfo-team{overflow: hidden;}
.playgameinfo p{ width: 100%; display: block;}
.playgameinfo .playgameinfo-logo { }
.playgameinfo .playgameinfo-logo img{ }
.playgameinfo .playgameinfo-time { margin-top: 20px}
.playgameinfo .playgameinfo-team img { margin-right: 20px}
.playgameinfo  .playgameinfo-team .btn{ margin-left: 10px;}
.playgameinfo .summary{ font-size: 12px; color: #999;}
.playgameinfo .scroll-panel{ max-height: 50px;   }
.playgameinfo .detail-short,.playgameinfo .scroll-panel { color: #666; }

.playgameinfo small { display: block}
.playgameinfo-horiz .playgameinfo-logo {}
.playgameinfo-horiz .playgameinfo-time, .playgameinfo-horiz .playgameinfo-team {
    margin-top: 10px
}