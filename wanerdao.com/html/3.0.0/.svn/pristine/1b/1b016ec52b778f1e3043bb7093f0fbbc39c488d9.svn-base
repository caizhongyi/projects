@charset "utf-8";
.hline { font-size: 0; height: 0; border-bottom: 1px solid #fff; border-top: 1px solid #d8e3e6 }

.userlist { zoom: 1 }

.userlist:after { content: "."; height: 1%; display: block; height: 0; line-height: 0; font-size: 0; visibility: hidden; clear: both; *display: none }

.userlist li { position: relative; margin: 0 5px; float: left; width: 48px; text-align: center }

.userlist li img { width: 100%; height: 48px; margin-bottom: 5px }

.userlist li .name { font-size: 12px }

.userlist li .summary { transition: opacity .2s linear 0; position: absolute; left: 0; bottom: 0; background: #000; filter: alpha(opacity=0)\9; opacity: 0; height: 12px; line-height: 12px; display: block; width: 48px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; display: inline-block; text-align: center; display: none }
.userlist li .summary, .userlist li .summary a { color: #fff }
.userlist li:hover .summary { filter: alpha(opacity=50)\9; opacity: .5; display: block }
.userlist img { border: 1px solid #ddd }
.userlist .name { visibility: hidden }
.userlist li { margin: 0 6px 10px 6px }
.userlist li:hover .name { visibility: visible }

.mini-page a { border: 1px solid #b6d8f2; height: 15px; line-height: 15px; border-radius: 5px; background: #b6d8f2 url(../images/btns/write-page-15x15.png) repeat-x; display: inline-block; cursor: pointer; vertical-align: middle; text-decoration: none; width: 15px; padding: 0; background-repeat: no-repeat; margin: 0 5px }

.mini-page a.prev { background-position: 0 0 }

.mini-page a.next { background-position: -15px 0 }

.mini-page a.prev disabled { background-color: #d9d9d9; border: 1px solid #d9d9d9 }

.mini-page a.next disabled { background-color: #d9d9d9; border: 1px solid #d9d9d9 }

.mini-page .more { background: #b6d8f2; width: auto; padding: 0 5px; border-radius: 4px; color: #fff }

.mod { border: 0 }

.mod .hd { border: 0 }

.mod .hd em { color: #0064a8; font-weight: normal }

.mod .combo-city { width: 50px }

.mod .combo-town { width: 155px }

.mod .mini-page { float: right }

.album-view { display: inline-block; position: relative }
.album-view .overlay { background: #000; filter: alpha(opacity=50)\9; opacity: .5; margin: 0 20px; width: 130px }
.album-view .summary { width: 170px }
.album-view .summary, .album-view .overlay { position: absolute; left: 0; top: 38px; height: 50px; line-height: 50px; text-align: center; color: #fff; opacity: 0; transition: all .2s ease-in-out 0s; transform: scale(0.1); visibility: hidden; filter:'alpha(opacity=70)\9'; }
.album-view:hover .summary, .album-view:hover .overlay { opacity: 0.7; transform: scale(1); visibility: visible }

.sharebox { display: none; color: #1992b1; margin: 10px 0; border: 1px solid #c8ddea; background: #eef7fe; padding: 10px }
.sharebox em { margin: 0 10px }
.sharebox .hd { padding: 0 10px }
.sharebox .hd h3 { font-weight: normal; font-family: "microsoft yahei"; color: #5188bd; font-size: 18px; float: left }
.sharebox .hd .return { float: right; border: 1px solid #ccc; background: #f7f7f7; display: inline-block; padding: 3px 10px; color: #333; border-radius: 5px }
.sharebox .combo { width: 150px }
.sharebox .text, .sharebox .combo { border: 1px solid #c7ddea }
.sharebox .bd .textarea { border: 1px solid #c7ddea; width: 98%; max-width: 98%; height: 62px }
.sharebox .ft .right .button { margin-right: 0 }
.sharebox .upload { border-top: 1px solid #c8ddea; margin-top: 20px }
.sharebox .upload .name { width: 100px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; display: inline-block }
.sharebox .upload .descript { width: 400px; overflow: hidden; white-space: nowrap; text-overflow: ellipsis; display: inline-block }
.sharebox .upload .add-pic { top: -10px; position: relative; background: #eef7fe; height: 15px; line-height: 15px }
.sharebox .upload .add-pic i { background: url(../images/icons/gray-arrowhead.png) no-repeat; vertical-align: middle; display: inline-block; height: 15px; width: 15px; padding: 0 }
.sharebox .upload .add-pic .down { background-position: 0 -15px }
.sharebox .upload .add-pic input[type=file] { opacity: 0; position: absolute; left: 0; top: 0; width: 67px }
.sharebox .upload .upload-inner { border: 1px solid #c7ddea; background: #fff; padding: 10px; margin: 0 10px }
.sharebox .upload .upload-inner span { margin-right: 10px }
.sharebox .upload .upload-inner li { margin: 5px 0; position: relative }
.sharebox .upload .upload-inner .gray-del { position: absolute; right: 0; top: 0 }
.sharebox .hd a { color: #999 }
.sharebox .hd a.selected { color: #5188bd }

#share-exp .text { margin-right: 10px }
#share-exp .textarea { width: 559px; max-width: 559px; margin-right: 0 }
#share-video .textarea { width: 548px; max-width: 548px; margin-right: 0 }
#share-video label { width: 60px; display: inline-block }
#upload-box .text { width: 466px; margin-right: 10px }
#upload-box .upload-inner { margin-top: 10px }

.online-video { zoom: 1; margin: 10px 0 }
.online-video:after { content: "."; height: 1%; display: block; height: 0; line-height: 0; font-size: 0; visibility: hidden; clear: both; *display: none }
.online-video .left { width: 400px; border-radius: 10px 10px 0 0; background: #f9f9f9; height: 300px; overflow: hidden; border: 1px solid #c7ddea }
.online-video .hd { border-bottom: 1px solid #c7ddea; background: #f9fdfe; height: 45px; line-height: 45px; color: #1992b1; text-align: center }
.online-video .hd input { margin-right: 10px }
.online-video .bd { background: url(../images/defaults/person.gif) no-repeat center; width: 100%; height: 225px }
.online-video .right { background: #fff; border: 1px solid #c7ddea; width: 230px }
.online-video .right .textarea { border: 0; height: 280px; font-size: 12px; max-width: 100%; width: 220px; max-height: 280px }
.online-video .right .textarea:focus { box-shadow: none }
.online-video .right .count { text-align: right; font-size: 12px }

.home-layout { overflow: hidden }
.home-layout .info { position: relative }
.home-layout .info .info-combo { display: none; position: absolute }
.home-layout .info:hover .info-combo { display: block }
.home-layout .info .info-combo { right: 10px; top: 10px; width: 21px; height: 21px; line-height: 21px; text-align: center; position: absolute }
.home-layout .info .info-combo>a { display: block; position: relative; border: 1px solid #bcd6e7; z-index: 1; height: 100%; width: 100% }
.home-layout .info .info-combo>a span { font-size: 0; height: 0; width: 0; vertical-align: middle; line-height: 0; border-style: solid; border-width: 5px; border-color: #b6b6b6 transparent transparent transparent }
.home-layout .info .info-combo .panel { text-align: left; width: 150px; background: #fff; right: -2px; position: absolute; top: 22px; display: none; border: 1px solid #bcd6e7 }
.home-layout .info .info-combo .panel li { padding: 5px 10px; border-bottom: 1px dotted #ddd }
.home-layout .info .info-combo .panel li:hover { background: #e5f4f8 }
.home-layout .info .info-combo .panel a { color: #333 }
.home-layout .info .info-combo:hover { background: #fff }
.home-layout .info .info-combo:hover a { border-bottom-color: #fff }
.home-layout .info .info-combo:hover .panel { display: block }
.home-layout .info .datepicker { margin: 20px 4px }
.home-layout .tabs-master { margin-top: 10px }
.home-layout .hline { margin: 10px 0 }
.home-layout .right-side .datepicker { margin-top: 10px }
.home-layout>.main { width: 670px; padding: 10px }
.home-tabs { font-size: 12px; background: #f9fdff; border: 1px solid #c9deeb }
.home-tabs .about { color: #999; margin: 5px 0 }
.home-tabs .nav { border-left: 1px solid #bad5e6 }
.home-tabs .nav li { padding: 0; position: relative ; cursor: pointer;}
.home-tabs .nav li i { position: absolute; border-color: transparent #bfe4ed transparent transparent; border-style: solid; border-width: 5px; display: none; font-size: 0; height: 0; line-height: 0; margin-top: 2px; vertical-align: middle; width: 0; top: 25px; left: -10px }
.home-tabs .nav li.selected i { display: block }
.home-tabs .nav li.selected img { background: #fff; border: 2px solid #bad5e6; margin: -2px }
.home-tabs .nav, .home-tabs .nav-clip { box-shadow: 0 0 0 #bad5e6, -1px -1px 5px #bad5e6; float: right; width: 60px }
.home-tabs .nav li, .home-tabs .nav-clip li { border: 1px solid #fff }
.home-tabs .nav li, .home-tabs .nav-clip li, .home-tabs .nav li img, .home-tabs .nav-clip li img { height: 58px }
.home-tabs .clip { width: 590px }
.home-tabs .clip, .home-tabs .clip .panel>li { height: 310px }
.home-tabs .clip .panel { overflow: hidden; padding: 10px }
.home-tabs .clip .panel li { height: 300px }
.home-tabs .clip .panel .info label { color: #999 }
.home-tabs .clip .panel .info em { color: #fb8758; font-size: 18px }
.home-tabs .clip .panel .info .img { width: 165px; height: 150px; border: 0; padding: 0 }
.home-tabs .clip .panel .info h3 { font-size: 20px; font-family: "microsoft yahei"; color: #9dc8d8; font-weight: normal; margin-bottom: 20px }
.home-tabs .clip .panel .info li { margin: 10px 0; height: auto }
.home-nav { margin-top: 10px }
.home-nav a { display: inline-block; *display: inline; zoom: 1; vertical-align: middle; margin-right: 10px; width: 160px; height: 120px; background: #e5f3fa url(../images/icons/home-nav.png) no-repeat; position: relative }
.home-nav a i { position: absolute; right: 10px; bottom: 10px; font-family: "microsoft yahei" }
.home-nav a:hover { background-color: #1992b1; color: #fff }
.home-nav a.newfeed { background-position: 0 0 }
.home-nav a.newfeed:hover { background-position: -160px 0 }
.home-nav a.image { background-position: 0 -120px }
.home-nav a.image:hover { background-position: -160px -120px }
.home-nav a.link { background-position: 0 -240px }
.home-nav a.link:hover { background-position: -160px -240px }
.home-nav a.video { background-position: 0 -360px; margin-right: 0 }
.home-nav a.video:hover { background-position: -160px -360px }

.datepicker { margin: 2px 2px 2px 10px; border-radius: 5px; box-shadow: 0 1px 5px #000; background: #1992b1 url(../images/deep-bg.png); font-family: "microsoft yahei"; color: #fff; zoom: 1 }
.datepicker:after { content: "."; height: 1%; display: block; height: 0; line-height: 0; font-size: 0; visibility: hidden; clear: both; *display: none }
.datepicker .cur { background: #6ebcd0 }
.datepicker .weekend { color: #ffc75c }
.datepicker .dp-bar { background: #4babc3; height: 22px; line-height: 22px }
.datepicker .left { width: 37px; height: 120px; border-radius: 5px 0 0 5px; background: #a0e4f3 }
.datepicker .left a { margin: 10px 0; font-size: 16px; text-align: center; color: #fff; background: 0; display: inline-block; position: relative; left: -5px; width: 42px }
.datepicker .left a i, .datepicker .left a span { font-size: 0; height: 0; width: 0; vertical-align: middle; line-height: 0; border-style: solid; border-width: 5px; border-color: #fff transparent transparent transparent; border-color: transparent transparent transparent #fff; position: absolute; display: none; right: -10px; top: 5px }
.datepicker .left a span { border-color: #6f8c95 #6f8c95 transparent transparent; border-width: 2px; top: 19px; left: 0 }
.datepicker .left a.selected { display: block; color: #6fb1c6; background: #fff }
.datepicker .left a.selected i, .datepicker .left a.selected span { display: block }
.datepicker .page { text-align: right; position: relative }
.datepicker .page a { font-size: 0; height: 0; width: 0; vertical-align: middle; line-height: 0; border-style: solid; border-width: 5px; border-color: #0b6278 transparent transparent transparent; margin: 0 5px }
.datepicker .page .prev { border-color: transparent #0b6278 transparent transparent }
.datepicker .page .next { border-color: transparent transparent transparent #0b6278 }
.datepicker .page .prev disabled { border-color: transparent #fff transparent transparent }
.datepicker .page .next disabled { border-color: transparent transparent transparent #fff }
.datepicker table { font-size: 12px; margin-top: 8px }
.datepicker table th { width: 40px }
.datepicker table td { color: #bfe4ed }
.datepicker table span { background: #bfe4ed; display: block; padding: 0 3px; border: 1px solid #bfe4ed; border-radius: 3px; position: relative; color: #0b6278 }
.datepicker table span i { font-size: 0; height: 0; width: 0; vertical-align: middle; line-height: 0; border-style: solid; border-width: 3px; border-color: #bfe4ed transparent transparent transparent; position: absolute; right: 2px; bottom: -7px }
.datepicker .main { height: 120px }
.datepicker .main .day-main { text-align: center }
.datepicker .main .month-main { position: relative }
.datepicker .main .month-main .page { position: absolute; right: 5px; top: 30% }
.datepicker .main .month-main .page a { display: block; margin: 10px 0 }
.datepicker .main .month-main .page .prev { border-color: transparent transparent #bfe4ed transparent }
.datepicker .main .month-main .page .next { border-color: #bfe4ed transparent transparent transparent }
.datepicker .main .month-main .page .prev disabled { border-color: transparent transparent #fff transparent }
.datepicker .main .month-main .page .next disabled { border-color: #fff transparent transparent transparent }
.datepicker .main .month-main .icon { background: url(../images/icons/datepicker-icon.png) no-repeat; position: absolute; right: 0; bottom: -10px; width: 21px; padding-left: 15px; height: 33px; line-height: 44px; color: #1992b1; text-align: center }
.datepicker .main .arrowhead { font-size: 0; height: 0; width: 0; vertical-align: middle; line-height: 0; border-style: solid; border-width: 5px; border-color: #fff transparent transparent transparent; margin-top: 5px; display: inline-block }
.datepicker .main .week { margin-right: 20px; margin-top: 10px }
.datepicker .main .day { font-size: 40px; padding-top: 10px }
.datepicker .main .day em { font-size: 14px; margin-left: 5px; color: #bfe4ed }
.datepicker .main .date { text-align: center; margin-top: 5px; font-size: 16px }
.datepicker .main .date span { margin-right: 10px }
.datepicker .main .date a { margin-left: 10px }

.active-list { margin: 10px 0; line-height: 22px; font-size: 12px }
.active-list li { margin-bottom: 10px }
.active-list li .opt { position: absolute; line-height: normal; bottom: 10px; right: 10px; visibility: hidden; transition: all .2s ease-in-out 0s; opacity: 0; transform: scale(0) }
.active-list li:hover .opt { visibility: visible; opacity: 1; transform: scale(1) }

.template-upload canvas { display: inline-block }
.template-upload span, .template-upload canvas { margin-right: 10px }
.template-upload li:hover { background: #ddd }