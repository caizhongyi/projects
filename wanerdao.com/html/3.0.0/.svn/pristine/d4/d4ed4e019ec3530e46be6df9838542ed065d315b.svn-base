@charset "utf-8";
.application-main {
    position: relative
}

.application-main .mobile-app {
    position: absolute;
    top: 80px;
    right: 50px
}

.application-main .item {
    position: absolute;
    right: 0;
    top: 0;
    background: url('../images/icons/application_icons.png') no-repeat 0 0;
    vertical-align: middle;
    display: inline-block;
    height: 98px;
    width: 98px;
    padding: 0;
    color: #666;
    text-align: center
}

.application-main .item:hover {
    text-decoration: none
}

.application-main .item i {
    position: relative;
    top: 100px;
    font-size: 18px
}

.application-main .destop {
    right: 140px;
    top: 74px;
    background-position: 0 0
}

.application-main .browse {
    right: 295px;
    top: 196px;
    background-position: 0 -196px
}

.application-main .moblie {
    right: 64px;
    top: 272px;
    background-position: 0 -98px
}

.application-main p {
    text-indent: 0;
    font-size: 12px
}

.application-main .remark {
    position: absolute;
    left: 500px;
    line-height: 25px;
    bottom: 10px;
    color: #999
}

.application-main .about {
    font-size: 12px;
    font-family: '宋体';
    width: 400px;
    position: absolute;
    right: 100px;
    bottom: 100px
}

.application-main .about h3 {
    font-size: 12px
}

.application-tabs {
    width: 20px;
    position: absolute;
    right: 0;
    top: 60px;
    text-align: center
}

.application-tabs a {
    display: block;
    background: #17a1e6;
    padding: 5px 10px;
    border-radius: 5px 0 0 5px;
    position: relative;
    float: right;
    top: 40px;
    width: 20px;
    color: #fff;
    font-size: 16px;
    transition: all .2s ease-in-out 0s;
    margin-bottom: 20px
}

.application-tabs a:hover {
    text-decoration: none
}

.application-tabs a i {
    display: inline-block;
    position: absolute;
    width: 0;
    height: 0;
    font-size: 0;
    border-width: 10px;
    border-color: 17 a1e6z transparent transparent transparent
}

.application-tabs a:hover, .application-tabs .selected {
    padding: 5px 15px
}

.application-tabs .item1 {
    background: #e65c17
}

.application-tabs .item2 {
    background: #36b3aa
}

.mobile-app {
    background: url('../images/moblie-app-box.png') no-repeat 0 0;
    padding: 20px 70px 20px 20px;
    width: 365px;
    height: 191px
}

.mobile-app .clip, .mobile-app .prev, .mobile-app .next {
    float: left
}

.mobile-app .clip {
    margin: 0 33px;
    width: 278px
}

.mobile-app .clip .icon {
    background: url('../images/icons/app-icon.png') no-repeat 0 0;
    vertical-align: middle;
    display: inline-block;
    height: 30px;
    width: 25px;
    padding: 0
}

.mobile-app .clip .mobile-icon {
    background-position: -25px 0
}

.mobile-app .clip .browse-icon {
    background-position: -50px 0
}

.mobile-app .clip .destop-icon {
    background-position: 0 0
}

.mobile-app .prev, .mobile-app .next {
    font-size: 0;
    height: 0;
    width: 0;
    vertical-align: middle;
    line-height: 0;
    border-style: solid;
    margin-top: 15px
}

.mobile-app .prev {
    border-width: 5px;
    border-color: transparent #666 transparent transparent
}

.mobile-app .next {
    border-width: 5px;
    border-color: transparent transparent transparent #666
}

.mobile-app .mobile-tabs {
    margin-bottom: 10px;
    color: #17a1e6;
    font-size: 18px;
    *zoom: 1
}

.mobile-app .mobile-tabs:before, .mobile-app .mobile-tabs:after {
    display: table;
    content: "";
    line-height: 0
}

.mobile-app .mobile-tabs:after {
    clear: both
}

.mobile-app .mobile-tabs i {
    font-style: italic;
    font-size: 12px
}

.mobile-app .mobile-tabs p {
    font-size: 12px
}

.mobile-app .combo {
    width: 230px
}

.mobile-app .form {
    font-family: '宋体'
}

.mobile-app .form label {
    font-size: 14px;
    display: inline-block;
    width: 80px
}

.mobile-app .form button {
    margin-right: 10px
}