.login {
  text-align: center;
  background: url(../img/cloud.png) center no-repeat;
  height: 400px;
}
.login .login-inner {
  margin-top: 140px;
}
.login .form {
  width: 560px;
  margin: 20px auto;
  text-align: left;
}
.login input[type="text"],
.login input[type="password"] {
  border-radius: 4px;
  font-size: 14px;
}
.login .login-box {
  background: url(../img/login-bg.png) center no-repeat;
  height: 43px;
  padding: 22px ;
}
.login .remember {
  padding: 0 22px;
}
