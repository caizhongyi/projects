@charset "utf-8";
.message-layout .message-nav {
    padding: 50px 0 10px 0;
    margin-right: -1px;
    position: relative
}

.message-layout .left-side {
    border-right: 1px solid #dae8f2;
    padding: 0;
    width: 170px;
}

.message-layout .left-side .equal {
    padding-left: 0;
    padding-right: 0
}

.message-layout .main {
    padding: 20px
}

.send-form .personal-label-text {
    width: 440px
}

.message-send .personal-label-text{ width: auto;}

.message-nav em {
    color: #0666ae
}

.message-nav li {
    padding: 10px 10px 10px 60px
}

.message-nav li a {
    color: #545354
}

.message-nav li a:hover {
    text-decoration: none
}

.message-nav .selected {
    background: #fff;
    border-top: 1px solid #dae8f2;
    border-right: 1px solid #fff;
    border-bottom: 1px solid #dae8f2
}

.message-nav .selected a {
    color: #0666ae
}

.tabs .content {
    padding: 10px 0
}

.message-title {
    display: block;
    font-weight: bold;
    color: #666;
    margin: 10px 0
}

.message-title i {
    margin-right: 5px
}

.invite .personal-label-text {
    width: 200px;
    margin-right: 10px
}

.invite .personal-label-text .text {
    width: 175px;
    margin: 0
}


.invite .combo {
    margin: 0 10px;
    width: 200px
}

.invite .invite-title {
    font-size: 12px;
    color: #999
}

.invite .invite-content {
    border-bottom: 1px solid #c7ddea;
    padding: 5px 0;
    margin-bottom: 20px
}

.invite .invite-content li {
    margin: 15px 0
}

.invite .btns input {
    margin-right: 10px
}
.list-message li i{
    margin-bottom: 1px;
}
.gray-mark {
    border: 1px solid #ddd;
    padding: 1px
}

.gray-mark span {
    border: 1px solid #ddd;
    padding: 1px 4px;
    margin: 1px;
    display: inline-block;
    background: #f4f4f4
}

.list-opts {
    border: 1px solid #c9c9c9;
    border-radius: 5px;
    display: inline-block;
    background: #eee
}
.list-opts [class*=icon]{ margin: 0;}
.list-opts a + a{ margin: 0;}
.list-opts a {
    border-right: 1px solid #c9c9c9;
    text-align: center;
    display: inline-block;
    width: 47px
}

.list-opts .last {
    border: 0
}

.detail {
    padding: 10px
}

.detail p {
    line-height: 25px;
    color: #333
}

.replay-line {
    border-bottom: 1px solid #e3eef5;
    height: 0;
    position: relative;
    margin: 15px 0
}
.replay-line-btn{
    position: absolute;
    left: 0;
    top: -10px;
    display: block
}
.list-message a ,.list-message span{ vertical-align: middle;}
.list-message a{ color: #999; }
.list-message .text-important{ color: #333; }
.list-message [type=checkbox]{margin-top: 0 !important;}
.list-message .brief-content{
    width: 560px;
    display: inline-block;
}
.list-message .pull-left{ width: 75px;}
.list-message .pull-right{ margin-left: 10px;}


.mesagebar{ cursor: pointer; margin-top: -1px;}
.mesagebar span{ margin: 0;}
.subcontent{ padding: 10px 0; display: none;}
.subcontent .list-label{ display: none;}

.message-info{
    overflow: hidden;
    white-space: nowrap;
    word-break: normal;
    word-wrap: normal;
    position: relative;
}
.message-info::after{
    position: absolute;
    right: 0;
    top: 0;
    height: 100%;
    width: 50px;
    content: '';

    background-image: linear-gradient(left,transparent ,#fff );
    background-image: -moz-linear-gradient(left, transparent, #fff );
    background-image: -webkit-linear-gradient(left, transparent, #fff );
}
.list-message li:hover .message-info::after{
    background-image: linear-gradient(left,transparent ,#e6f0f2 );
    background-image: -moz-linear-gradient(left, transparent, #e6f0f2 );
    background-image: -webkit-linear-gradient(left, transparent, #e6f0f2 );
}