/*
*   css 3d
*	http://tympanus.net/Development/ImageTransitions/index5.html
*/
.nav-tabs {
  *zoom: 1;
  border-bottom: 1px solid #ddd;
}
.nav-tabs:before,
.nav-tabs:after {
  display: table;
  content: "";
  line-height: 0;
}
.nav-tabs:after {
  clear: both;
}
.nav-tabs li {
  float: left;
}
.nav-tabs a {
  display: inline-block;
  padding: 5px 15px;
  border: 1px solid #ddd;
  background: #eee;
  cursor: pointer;
  transition: all 0.2s ease-in-out;
  color: #666;
  margin-bottom: -1px;
  margin-left: -1px;
}
.nav-tabs .active a,
.nav-tabs a:hover {
  border-top-color: #ED2F2F;
  background: #fff;
  border-bottom-color: #fff;
}
.tabs,
.slider {
  -webkit-perspective: 600;
  perspective: 600;
  -webkit-transform-style: preserve-3d;
  -moz-transform-style: preserve-3d;
  -o-transform-style: preserve-3d;
  -ms-transform-style: preserve-3d;
  transform-style: preserve-3d;
}
.tabs ul,
.slider ul,
.tabs ol,
.slider ol,
.tabs li,
.slider li {
  list-style: none;
  margin: 0;
  padding: 0;
}
.tabs a,
.slider a,
.tabs a:hover,
.slider a:hover {
  text-decoration: none;
}
.tabs .prev,
.slider .prev,
.tabs .next,
.slider .next {
  transition: all 0.2s ease-in-out;
}
.tabs-list > li,
.tabs-list .item {
  position: absolute;
  left: 0;
  top: 0;
  padding: 20px 0;
  transition: all 0.3s ease-in-out 0s;
  visibility: hidden;
  opacity: 0;
}
.tabs-list .in {
  visibility: inherit;
  opacity: 1;
  z-index: 1;
  position: static;
}
.tabs-clip,
.slider-clip,
.carousel-clip {
  overflow: hidden;
  position: relative;
}
.tabs-list {
  position: relative;
}
.slider .slider-list li {
  -webkit-transition-duration: 0.8s  ;
  -moz-transition-duration: 0.8s  ;
  -ms-transition-duration: 0.8s  ;
  -o-transition-duration: 0.8s  ;
  transition-duration: 0.8s  ;
}
.slider-wrap,
.slider-list,
.carousel-wrap {
  position: relative;
}
.slider-transition {
  -webkit-transition: left 0.5s linear, top 0.5s linear ;
  -moz-transition: left 0.5s linear ,top 0.5s linear;
  -ms-transition: left 0.5s linear ,top 0.5s linear;
  -o-transition: left 0.5s linear,top 0.5s linear ;
  transition: left 0.5s linear ,top 0.5s linear;
}
.slider-transition li {
  -webkit-transition: none;
  -moz-transition: none;
  -ms-transition: none;
  -o-transition: none;
  transition: none;
}
.slider-list,
.slider-list li,
.slider-list img {
  width: 100%;
  height: 100%;
}
.slider-list li {
  position: absolute;
  left: 0;
  top: 0;
  visibility: hidden;
  box-shadow: 5px 5px 5px #fff inset;
}
.slider-list .in {
  visibility: inherit;
}
.slider-list .mask,
.slider-list .title {
  top: auto;
  display: block;
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 40px;
}
.slider-list .mask {
  z-index: 1;
}
.slider-list .title {
  z-index: 2;
  color: #fff;
  line-height: 60px;
  text-indent: 1em;
  text-align: left;
}
.slider-clip,
.slider-clip li {
  height: 330px;
  position: relative;
  overflow: hidden;
}
/* tab-view */
.slider-view {
  position: relative;
  height: 500px;
  border: 1px solid #ddd;
  overflow: hidden;
  background: #eeeeee;
}
.slider-view .view-box {
  position: absolute;
  background: #fff;
  padding: 10px;
  border: 1px solid #ddd;
}
.slider-view img {
  max-width: auto;
}
.slider-nav {
  position: absolute;
  z-index: 2;
  bottom: 20px;
  right: 20px;
}
.slider-nav a {
  transition: all 0.2s linear 0s;
  width: 100%;
  height: 100%;
  display: inline-block;
}
.slider-nav li {
  max-width: 100px;
  background: #666;
  padding: 2px;
  margin: 0 4px;
  text-align: center;
  display: inline-block;
  *display: inline;
  *zoom: 1;
  position: relative;
  border: 1px solid #999;
}
.slider-nav img {
  width: 100%;
  height: 100%;
}
.slider-nav a:hover {
  text-decoration: none;
}
.slider-nav .active {
  border-color: #999;
}
.slider {
  position: relative;
  overflow: hidden;
}
.slider img {
  box-shadow: 3px 3px 5px #fff;
}
.slider .prev,
.slider .next {
  font-family: "microsoft yahei";
  z-index: 10;
  opacity: 0.5;
  filter: alpha(opacity = 50 );
  position: absolute;
  transition: all 0.2s linear 0s;
  display: block;
  color: #000;
  width: 100px;
  top: 0;
  min-width: 50px;
  height: 100%;
  visibility: hidden;
  text-align: center;
}
.slider .prev span,
.slider .next span {
  position: relative;
  top: 30%;
  font-weight: bold;
  font-size: 80px;
  display: inline-block;
  padding: 0 20px;
  line-height: normal;
  color: #000;
}
.slider .prev:hover,
.slider .next:hover {
  opacity: 1;
  filter: alpha(opacity = 100 );
  text-decoration: none;
}
.slider .prev:active,
.slider .next:active {
  text-decoration: none;
}
.slider .prev {
  left: 0px;
  -webkit-transform: translateX(-100px);
  transform: translateX(-100px);
  opacity: 0;
}
.slider .next {
  right: 0px;
  -webkit-transform: translateX(100px);
  transform: translateX(100px);
  opacity: 0;
}
.slider:hover .prev,
.slider:hover .next {
  -webkit-transform: translateX(0);
  transform: translateX(0);
  visibility: inherit;
  opacity: 0.7;
}
.slider .disabled {
  opacity: 0;
  visibility: hidden;
}
.slider .nav-round {
  text-align: right;
}
.slider .nav-round li,
.slider .nav-round a {
  width: 7px;
  height: 7px;
  border-radius: 5px;
  padding: 0;
}
.slider .nav-round .active {
  background: #cdcdcd;
  border-color: #eee;
}
/* slider */
.carousel-clip {
  overflow: hidden;
  position: relative;
}
.slider.vertical .slider-list li,
.slider-vertical .slider-list li,
.slider.horizontal .slider-list li,
.slider-horizontal .slider-list li {
  position: relative;
  visibility: inherit;
  width: 100%;
}
.slider.vertical .slider-list .prev-active,
.slider-vertical .slider-list .prev-active,
.slider.horizontal .slider-list .prev-active,
.slider-horizontal .slider-list .prev-active,
.slider.vertical .slider-list .active,
.slider-vertical .slider-list .active,
.slider.horizontal .slider-list .active,
.slider-horizontal .slider-list .active {
  animation: none;
  -webkit-animation: none;
}
.slider.vertical .slider-list .active,
.slider-vertical .slider-list .active,
.slider.horizontal .slider-list .active,
.slider-horizontal .slider-list .active {
  opacity: 1;
  -webkit-transform: scale(1);
  transform: scale(1);
}
.slider.horizontal .slider-list,
.slider-horizontal .slider-list {
  width: 100%;
}
.slider.horizontal .slider-list li,
.slider-horizontal .slider-list li {
  float: left;
}
