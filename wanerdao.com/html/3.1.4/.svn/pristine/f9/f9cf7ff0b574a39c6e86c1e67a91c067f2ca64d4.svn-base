<script type="text/javascript">

    $(function(){
        $('.scroll-panel').initslimscroll();

        $('.calendar-act-res').on('click','.showall',function(){
            $(this).hide().closest('.form-item').find('.list-users,.less,.side-infos').show();
            $(this).closest('.scroll-panel').initslimscroll();
        }).on('click','.less',function(){
            $(this).hide().closest('.form-item').find('.list-users,.side-infos').hide().end().find('.showall').show();
        })

        $('.activity-search .group-list').on('click','.title',function(){
            var $item = $(this).closest('li');
            var $scrollPanel = $('.scroll-panel').css('overflow','hidden');
            if($item.find('.content-title').is(':animated')) return ;
            $item.toggleClass('in')
                    .find('.content-title').slideToggle().end()
                    .find('.content-panel').slideToggle(function(){
                        $scrollPanel.initslimscroll();
                    });
        })

        // TODO calendar create
        var calendar = $('#calendar').on('beforeChange', function(e){
            $(this).find('.flag').empty();
        }).on('render', function(e){
            var  $td = e.relatedTarget.closest('.cell'),
                 $flag = $td.find('.flag');
            if( $flag.length )
                $flag.html('<i class="icon-yel-flag"></i>25</div>');
            else
                $td.append('<div class="flag"><i class="icon-yel-flag"></i>25</div></div>');
        }).calendar().data('calendar');

