@charset "utf-8";
.http-error {
    font-size: 12px;
    color: #808080;
    line-height: 22px;
    padding: 80px 20px;
}

.http-error img{ border: none; background: none;}
.http-error .main {  text-align: center}
.http-error .pull-right {width: 400px}

.http-error .title {
    color: #1992b1;
    font-size: 20px;
    margin-top: 50px;
    font-weight: bold;
    margin-bottom: 10px;
}

.http-error a {margin-right: 10px}
.http-error p { text-indent: 0}

@media (max-width: 700px) {
  .http-error{ text-align: center; padding: 10px;}
  .http-error .title{ margin-top: 20px;}
  .http-error >  .pull-right{ float: none; width: auto;}
}