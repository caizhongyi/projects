.layout:after{content:'\20';display:block;height:0;clear:both;}
.layout{*zoom:1;}
.vm *{display:inline-block;vertical-align:middle;}
.vm option{display:block;}

/*=====Layout Width=====*/
.w_1004{ width:1004px;}
.w_800{width:800px;}
/*常用*/
.center{text-align:center;}
.pt10{padding-top:10px;}
.equal { padding-bottom:32767px; margin-bottom: -32767px; overflow:hidden;}
.overflow{overflow:hidden; }
.inline { display:-moz-inline-stack;display: inline-block;     zoom: 1; *display: inline; /* IE < 8: fake inline-block */ letter-spacing: normal;word-spacing: normal;}
.fb{ font-weight:bold;}
.p2em {	text-indent:2em;}
.f14 { font-size: 14px;}
.black5 { height: 5px; line-height: 5px; font-size:1px; clear: both; overflow: hidden;}
.black10 { height: 10px; line-height: 10px;	font-size:1px; clear: both;	overflow: hidden;}

/*float*/
.f_left{float:left;}
.f_right{float:right;}

/*  clear  */
.clear{display:block;height:0;line-height:0;font-size:0;visibility:hidden;clear:both;}
.clear2{clear:both;}
.clearfix{zoom:1;}
.clearfix:after{content:".";height:1%;display:block;height:0;line-height:0;font-size:0;visibility:hidden;clear:both; *display:none;}

.vInput{ position:relative; margin:-1px 3px 2px 0px;}

/* 超过的字以...显示 */
.ellipsis{
    display: block;
    overflow: hidden;
    white-space: nowrap;
    -o-text-overflow: ellipsis;
    -ms-text-overflow: ellipsis;
    text-overflow: ellipsis;}
/* end 超过的字以...显示 */


