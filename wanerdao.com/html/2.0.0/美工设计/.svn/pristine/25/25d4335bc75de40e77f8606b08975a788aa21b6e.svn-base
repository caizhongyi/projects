@charset "utf-8";
/* CSS Document */
.three_reply{ border:1px solid #DFDFDF; width:551px; background-color:#FFF; padding:0px 20px;}
.three_reply .intArea{ height:31px; padding:18px 0px 10px;}
.three_reply .txtInt{ border:1px solid; border-color:#707070 #CECECE #CECECE #707070; height:28px; padding:0px 5px;}
.three_reply .btnInt{ width:67px; height:32px; background:url(../images/reply/icon_reply.png) no-repeat; border:0; font-size:14px; cursor:pointer; vertical-align:middle;}
.three_reply .btn_reply{ background-position:0px 0px; color:#0085C5;}
.three_reply .btn_cancel{ background-position:0px -32px; color:#333333;}

.three_reply .replyUl{}
.three_reply .replyUl li{ border-bottom:1px dashed #DFDFDF; padding:10px 0px 5px 0px;}

.rBorImg img{ border:1px solid #B3DFEE; padding:1px; background-color:#fff;}
.replyBox{ overflow:hidden; line-height:22px; color:#999;}
.oneRep{ border-bottom:1px dashed #DFDFDF; padding:12px 0px 5px; overflow:hidden; zoom:1;}
.replyBox .lPic{ float:left; margin:4px 15px 0px 2px;}
.replyBox .footRep{ height:22px;}
.replyBox .footRep .date{ float:left; color:#CCC;}
.replyBox .footRep .opera{ float:right;}
.replyBox .footRep .opera a{ margin:0px 3px;}
.oneRep .mydl{ width:487px; float:left;}
.oneRep .mydl .sub{ overflow:hidden;}
.replyBox a{ color:#0085C5;}
.replyPage{ text-align:right; height:22px; padding:14px 0px; clear:both; line-height:22px; color:#999;}
.replyPage a{ color:#0085C5;}
.replyPage .cur{ font-weight:bold; color:#CC0000;}
.three_reply .zs{ margin-left:20px; display:inline-block; padding-right:9px; background:url(../images/reply/icon_reply.png) 26px -105px no-repeat;}
.three_reply .zs_z{ background-position:26px -67px;}


.twoRep{ width:445px; float:left; zoom:1;}
.twoRep .twodl{ border-top:1px dashed #DFDFDF; width:449px;}
.twoRep .twodl dd{}

.replyBox .twoRep  .footRep .opera{ position:relative; margin-top:-22px; background-color:#fff;}
.oneRep .mydl .sub{padding:5px 0px 0px; border-top:1px dashed #DFDFDF; margin:5px 0px 0px; zoom:1; display:none;}
.oneRep .mydl .sub .lPic{ margin-right:10px;}

.oneRep .mydl .sub .sSub{padding:5px 0px; border-top:1px dashed #DFDFDF; margin:5px 0px 0px; zoom:1;}
.ThreeRep{ width:402px; float:left;}