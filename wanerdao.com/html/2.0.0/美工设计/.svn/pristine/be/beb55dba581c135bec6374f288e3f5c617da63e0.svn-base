<!--主体-->
<div class="main jz">
  <div class="mCon">
    <div class="layout_m ">
      <div class="main_share">
        <div class="blank10px"></div>
        <div class="title">
          <h2 class="sub_nav"><a class="active" href="#">创建活动</a></h2>
        </div>
        <p class="info_type">
          <input type="radio" name="info_type" id="listStyle">
          <label for="listStyle">列表式填写</label>
          <input type="radio" name="info_type" id="guiteStyle">
          <label for="guiteStyle">导向式填写</label>
        </p>
        <h3 class="event_h3 yh">发起活动</h3>
        <ul class="steps yh fb">
          <li class="visited"><i>1</i><span>初始参数引用</span></li>
          <li class="visited"><i>2</i><span>基本参数设定</span></li>
          <li class="visited"><i>3</i><span>报名参数设定</span></li>
          <li class="visited"><i>4</i><span>邀请发送</span></li>
          <li class="active"><i>5</i><span>个人报名</span></li>
          <li class="link"><i>6</i><span>参数保存</span></li>
        </ul>
        <table width="80%" cellspacing="1" border="0">
          <tbody>
            <tr>
              <td width="25%" align="right">准备通过：</td>
              <td width="75%"><select class="w91" name="vehicle">
                  <option value="AL">汽车</option>
                  <option value="AK">汽车</option>
                </select>
                &nbsp;&nbsp;&nbsp;
                参加活动
                <select class="w91" name="ifVehicle">
                  <option value="AL">有</option>
                  <option value="AK">无</option>
                </select>
                &nbsp;&nbsp;&nbsp;车参加活动
                <select class="w120" name="willing">
                  <option value="AL">愿意提供搭车</option>
                  <option value="AK">不愿意提供搭车</option>
                </select>
                <select class="w120" name="choosePeople">
                  <option value="AL">可选搭车人</option>
                  <option value="AK">不需选搭车人</option>
                </select></td>
            </tr>
            <tr>
              <td align="right">搭车费：</td>
              <td><select class="w91" name="takeFare">
                  <option value="AL">油费均分</option>
                  <option value="AK">有</option>
                </select>
                &nbsp;&nbsp;&nbsp;
                每人￥
                <input type="text" class="txtInt"></td>
            </tr>
            <tr>
              <td align="right">车型：</td>
              <td><select class="w91" name="licensePlate">
                  <option value="AL">车牌</option>
                  <option value="AK">有</option>
                </select>
                &nbsp;&nbsp;&nbsp;
                <select class="w91" name="model">
                  <option value="AL">车型</option>
                  <option value="AK">有</option>
                </select>
                &nbsp;&nbsp;&nbsp;车牌号：
                <input type="text" class="txtInt"></td>
            </tr>
            <tr>
              <td align="right">年代：</td>
              <td><input type="text" class="txtInt">
                &nbsp;&nbsp;&nbsp;愿意提供空位数：
                <input type="text" class="txtInt"></td>
            </tr>
          </tbody>
        </table>
        <div class="next_pre"><a href="#" class="btn_137x32">上一步</a> &nbsp;&nbsp; <a href="#" class="btn_137x32">下一步</a></div>
